{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "LAPPS Authorization Accepted",
    "description": "The response to a valid login request.",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "username": {
            "type": "string"
        },
        "resourceId": {
            "type": "string"
        },
        "timestamp": {
            "type": "integer"
        },
        "token": {
            "type": "string"
        },
        "restrictions": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/restriction"
            }
        }
    },
    "required": [
        "username",
        "resourceId",
        "timestamp",
        "uuid",
        "restrictions"
    ],
    "definitions": {
        "restriction": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "uri": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [
                "name",
                "description",
                "uri"
            ]
        }
    }
}