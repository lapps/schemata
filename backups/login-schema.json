{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "LAPPS Login Request",
    "description": "The JSON document sent to a protected resource when a user wishes to connect.",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "username": {
            "type": "string"
        },
        "password": {
            "type": "string"
        },
        "resourceId": {
            "type": "string"
        }
    },
    "required": [
        "username",
        "password",
        "resourceId"
    ]
}